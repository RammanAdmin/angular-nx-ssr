{
  "name": "angular-nx-ssr",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:web && npm run build:server",
    "build:web": "ng build --prod --app=web",
    "build:server": "ng build --prod --app=server --output-hashing=false",
    "postbuild:server": "webpack --config webpack.server.config.js --progress --colors",
    "docker:build": "docker build -t beeman/angular-nx-ssr:latest .",
    "docker:run": "docker run -it -p 4000:4000 --name angular-nx-ssr --rm beeman/angular-nx-ssr:latest",
    "now:deploy": "now --docker",
    "now:alias": "now alias",
    "now": "npm run now:deploy && npm run now:alias",
    "serve": "node dist/apps/server/server",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "format": "prettier --single-quote --print-width 120 --write \"{apps,libs}/**/*.ts\""
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "5.0.0",
    "@angular/common": "5.0.0",
    "@angular/compiler": "5.0.0",
    "@angular/core": "5.0.0",
    "@angular/forms": "5.0.0",
    "@angular/http": "5.0.0",
    "@angular/platform-browser": "5.0.0",
    "@angular/platform-browser-dynamic": "5.0.0",
    "@angular/platform-server": "^5.0.0",
    "@angular/router": "5.0.0",
    "@ngrx/effects": "^4.1.0",
    "@ngrx/router-store": "^4.1.0",
    "@ngrx/store": "^4.1.0",
    "@ngrx/store-devtools": "4.0.0",
    "@nguniversal/express-engine": "^5.0.0-beta.5",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.5",
    "@nrwl/nx": "0.1.1",
    "bootswatch": "^4.0.0-beta.2",
    "core-js": "^2.4.1",
    "font-awesome": "^4.7.0",
    "rxjs": "^5.5.2",
    "ts-loader": "^3.1.1",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "nrwl/fix-cli-build",
    "@angular/compiler-cli": "5.0.0",
    "@angular/language-service": "5.0.0",
    "@nrwl/schematics": "0.1.1",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "~3.1.1",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "prettier": "1.7.4",
    "protractor": "~5.1.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.3.2",
    "typescript": "2.4.2"
  },
  "now": {
    "name": "angular-nx-ssr",
    "alias": [
      "angular-nx-ssr"
    ]
  }
}
